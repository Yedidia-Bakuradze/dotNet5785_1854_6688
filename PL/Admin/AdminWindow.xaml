<Window x:Class="PL.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Admin"
        mc:Ignorable="d"
        Title="AdminWindow" Height="475" Width="850"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Closed="OnWindowClosed"
        Loaded="OnWindowLoaded"
        >
    <Window.Resources>
        <!-- Style for the clock management grid -->
        <Style x:Key="ActionBtnStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#EFEFEF"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="CriticalBtnStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#FF0000"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="LeftBottomBtnActionStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10,0,0,0"/>
            <Setter Property="Background" Value="#46A3EF"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="RightBottomBtnAction" TargetType="Border">
            <Setter Property="CornerRadius" Value="0,10,0,0"/>
            <Setter Property="Background" Value="#8B71B1"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="MiddleBottomBtnActionStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="ClearBtnStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style x:Key="LeftConfigBtnStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="0,10,10,0"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="RightConfigBtnStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="10,0,0,10"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#2798D5" Offset="0"/>
                <GradientStop Color="#C25C9E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="115"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="94.5"/>
            <ColumnDefinition Width="351"/>
            <ColumnDefinition Width="94.5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="115"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="14"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="27"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="27"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="62"/>
        </Grid.RowDefinitions>

        <!--Manage Clock btn-->
        <Border Style="{StaticResource LeftConfigBtnStyle}" Grid.Column="0" Grid.Row="3">
            <Button Content="Manage Clock" Style="{StaticResource ClearBtnStyle}"/>
        </Border>
        
        <!--Manage Risk Range btn-->
        <Border Style="{StaticResource LeftConfigBtnStyle}" Grid.Column="0" Grid.Row="5">
            <Button Style="{StaticResource ClearBtnStyle}" Content="Manage Risk Range"/>
        </Border>
        
        <!--Manage Display Actions btn-->
        <Border Grid.Column="6" Grid.Row="3" Style="{StaticResource RightConfigBtnStyle}">
            <Button Style="{StaticResource ClearBtnStyle}" Content="Display Actions"/>
        </Border>

        <!--The Clock-->
        <Border Grid.Column="3" Grid.Row="1" CornerRadius="10" Background="#7E76B5">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="275" ShadowDepth="2" BlurRadius="4"/>
            </Border.Effect>
            <TextBlock 
                       Text="12:12:00 12/12/2024"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="31"
                       Foreground="White"
                       />
        </Border>
        
        <Grid Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Style="{StaticResource LeftBottomBtnActionStyle}" Grid.Column="0">
                <Button Content="Expired" Style="{StaticResource ClearBtnStyle}"/>
            </Border>

            <Border Style="{StaticResource MiddleBottomBtnActionStyle}" Grid.Column="1" Background="#5386C5">
                <Button Content="Open In Risk" Style="{StaticResource ClearBtnStyle}"/>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource MiddleBottomBtnActionStyle}" Background="#6081C0">
                <Button Content="Open" Style="{StaticResource ClearBtnStyle}"/>
            </Border>

            <Border Grid.Column="3" Style="{StaticResource MiddleBottomBtnActionStyle}" Background="#6E7CBB">
                <Button Content="In Progress" Style="{StaticResource ClearBtnStyle}"/>
            </Border>

            <Border Grid.Column="4"  Style="{StaticResource MiddleBottomBtnActionStyle}" Background="#7977B7">
                <Button Content="In Progress Risk" Style="{StaticResource ClearBtnStyle}"/>
            </Border>

            <Border Style="{StaticResource RightBottomBtnAction}" Grid.Column="5">
                <Button Grid.Column="5" Content="Closed" Style="{StaticResource ClearBtnStyle}"/>
            </Border>
        </Grid>

        <!--Clock Managment-->
        <Border Background="White"
                Grid.Column="2" Grid.ColumnSpan="3"
                Grid.Row="3" Grid.RowSpan="3"
                CornerRadius="10"
                Visibility="Hidden"
                >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="216"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="216"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="52"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="52"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="52"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Column="1" Grid.Row="2" Style="{StaticResource ActionBtnStyle}" >
                    <Button Content="Add a Second"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="OnClockForwardOneSecondUpdate"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="4" Style="{StaticResource ActionBtnStyle}" >
                    <Button Content="Add a Minute" Background="Transparent" BorderThickness="0" Click="OnClockForwardOneMinuteUpdate"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="6" Style="{StaticResource ActionBtnStyle}" >
                    <Button Content="Add a Hour" Background="Transparent" BorderThickness="0" Click="OnClockForwardOneHourUpdate"/>
                </Border>
                <Border Grid.Column="3" Grid.Row="2" Style="{StaticResource ActionBtnStyle}" >
                    <Button Content="Add a Day" Background="Transparent" BorderThickness="0" Click="OnClockForwardOneDayUpdate"/>
                </Border>
                <Border Grid.Column="3" Grid.Row="4" Style="{StaticResource ActionBtnStyle}" >
                    <Button Content="Add a Year" Background="Transparent" BorderThickness="0" Click="OnClockForwardOneYearUpdate"/>
                </Border>
                <Border Grid.Column="3" Grid.Row="6" Style="{StaticResource CriticalBtnStyle}" >
                    <Button Content="Reset The Clock" Background="Transparent" BorderThickness="0" Click="OnClockResetAction"/>
                </Border>

            </Grid>
        </Border>
    </Grid>
</Window>
