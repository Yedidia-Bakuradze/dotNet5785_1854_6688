<Window x:Class="PL.Call.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="Call" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Label Content="{Binding CurrentCall.Id}"
               Grid.Row="1" Grid.Column="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <ScrollViewer Grid.Row="2" Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="10">
                <!-- Id -->
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Id:" Width="200" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding CurrentCall.Id, Mode=OneWay}" Width="200" IsReadOnly="True"/>
                </StackPanel>

                <!-- Type Of Call -->
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Type Of Call:" Width="200" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding Source={StaticResource CallTypesCollectionKey}}"
                              SelectedItem="{Binding CurrentCall.TypeOfCall}" Width="200"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Description:" Width="200" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding CurrentCall.Description}" Width="200"/>
                </StackPanel>

                <!-- Call Address -->
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Call Address:" Width="200" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding CurrentCall.CallAddress}" Width="200"/>
                </StackPanel>

                <!-- Call Start Time -->
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Call Start Time:" Width="200" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding CurrentCall.CallStartTime, Mode=OneWay}" Width="200" IsReadOnly="True"/>
                </StackPanel>

                <!-- Call Deadline -->
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Call Deadline:" Width="200" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding CurrentCall.CallDeadLine}" Width="200"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Status:" Width="200" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding Source={StaticResource CallStatusCollectionKey}}"
                              SelectedItem="{Binding CurrentCall.Status}" Width="200"/>
                </StackPanel>

                <!-- My Assignments -->
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="My Assignments:" Width="200" VerticalAlignment="Center"/>
                    <ListBox ItemsSource="{Binding CurrentCall.MyAssignments}" Width="200"/>
                </StackPanel>

                <!-- Submit Button-->
                <Button Content="Submit" Click="OnSubmitBtnClick"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
